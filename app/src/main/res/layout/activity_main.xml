<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="mainViewModel"
            type="com.example.hometeam.viewmodels.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Back"
            android:onClick="backButton"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/searchField"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:completionHint="Player's name"
            android:completionThreshold="1"
            android:hint="Player's Name"
            android:layout_marginHorizontal="10dp"
            android:nestedScrollingEnabled="false"
            android:singleLine="true"
            android:text="@={mainViewModel.search}"
            app:layout_constraintEnd_toStartOf="@+id/searchButton"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:text="Search"
            android:onClick="@{()->mainViewModel.fetchPlayers()}"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchField" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchField">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="4dp"
                tools:listitem="@layout/player_item" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/selected_player_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/backButton"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/selected_player_image_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/player_image"
                    app:loadimage="@{mainViewModel.selectedPlayer.getImage}"
                    />

                <ImageView
                    android:id="@+id/selected_player_image_flag"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/selected_name"
                    android:layout_alignBottom="@+id/selected_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="89dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="-52dp"
                    android:layout_toEndOf="@+id/selected_name"
                    android:src="@drawable/player_image"
                    app:loadflag="@{mainViewModel.selectedPlayer.strNationality}" />

                <TextView
                    android:id="@+id/selected_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/selected_player_image_view"
                    android:text="@{mainViewModel.selectedPlayer.strPlayer,default=`name`}"

                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selected_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selected_name"
                    android:layout_toEndOf="@id/selected_player_image_view"
                    android:text="@{mainViewModel.selectedPlayer.strTeam,default=`team`}" />

                <TextView
                    android:id="@+id/selected_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selected_team"
                    android:layout_toEndOf="@id/selected_player_image_view"
                    android:text="@{mainViewModel.selectedPlayer.strPosition,default=`position`}" />

                <TextView
                    android:id="@+id/selected_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selected_position"
                    android:layout_toEndOf="@id/selected_player_image_view"
                    android:text="@{mainViewModel.selectedPlayer.strSport,default=`sport`}" />

                <TextView
                    android:id="@+id/selected_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selected_sport"
                    android:layout_toEndOf="@id/selected_player_image_view"
                    android:text="@{mainViewModel.selectedPlayer.strNationality,default=`Nationality`}" />

                <TextView
                    android:id="@+id/selected_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selected_player_image_view"
                    android:layout_marginTop="50dp"
                    android:text="@{mainViewModel.selectedPlayer.strDescriptionEN,default=`description`}" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>